<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    tools:context=".ListNovelActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49">

        <Button
            android:id="@+id/button_teor1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/interbold"
            android:text="Техника безопасности"
            android:textColor="@color/text_button" />

        <Button
            android:id="@+id/button_teor2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/interbold"
            android:text="Регламент работы компании"
            android:textColor="@color/text_button" />

        <Button
            android:id="@+id/button_teor3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/interbold"
            android:text="Система управления проектами"
            android:textColor="@color/text_button" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>